{
  "maxerr": 50, //jshint 设置
  "bitwise": true, //禁止使用位操作符
  "camelcase": true, //对应命名规范 驼峰规则
  "eqeqeq": true, //对比的时候使用 ===
  "forin": true, //必须做此判断if (obj.hasOwnProperty(key)) {}
  "noarg": true, //禁止使用 arguments.caller  arguments.callee
  "noempty": true, //不能使用空的语句块
  "immed": true, //立即执行的写法 (function(){}()); 不能是(function(){})();
  "curly": true, //语句块必须使用 {} 包括；不能使用 if(a) return 而要使用if(a){return};
  "unused": "vars", //对声明但没有使用的变量报错，不包含function的params
  "quotmark": "single", //使用单引号
  "indent": 4, //以4个空格作为缩进
  "undef": true, //对未定义的变量报错
  "strict": true, //添加use strict
  "latedef": true, //变量需要先定义在使用 包括 function
  "freeze": true, //禁止覆盖Array等的prototype
  "es3": true, //
  "newcap": false, // 可以不适用new 调用构造函数
  "nonew": false, //可以直接使用实例化构造函数 而不用赋值到某个变量
  "notypeof": false, //检查typeof的返回值是否写错 比如 把function写成funtion 会报错
  "laxcomma": false, //禁止逗号前置
  "asi": false, // 结尾必须有分号
  "boss": false, //不能再condition中赋值 禁止if(a=10){}
  "eqnull": false, //和 null undefined做比较 必须使用 ===
  "evil": false, //不能使用evil
  "sub": false, //属性能用.访问的 不能用[] 不能用object['name'];
  "debug": false, //代码里面不能用 debugger
  "browser": true, //Environments
  "jquery": true, //预定义的变量 $
  "devel": false, //代码里面不能包含 alert console 等
  "nonstandard": true, //可用escape unescape 方法
  "wsh": true, // Windows_Script_Host
  "globals": { //全局变量
    "define": true,
    "require": true
  }
}